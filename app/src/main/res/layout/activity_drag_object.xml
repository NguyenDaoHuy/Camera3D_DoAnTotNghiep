<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.camera_detect_activity.ml.drag_object.DragObjectActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_drag_object"
                android:name="com.google.ar.sceneform.ux.ArFragment"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/table"
                        android:id="@+id/table"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/chair"
                        android:id="@+id/chair"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lamp"
                        android:id="@+id/lamp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bookshelf"
                        android:id="@+id/bookshelf"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/odltv"
                        android:id="@+id/odltv"/>
                    <ImageView
                        android:id="@+id/bear"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bear" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat"
                        android:id="@+id/cat"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/cow"
                        android:id="@+id/cow"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/dog"
                        android:id="@+id/dog"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/elephant"
                        android:id="@+id/elephant"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ferret"
                        android:id="@+id/ferret"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/hippopotamus"
                        android:id="@+id/hippopotamus"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/horse"
                        android:id="@+id/horse"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/reindeer"
                        android:id="@+id/reindeer"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/koala_bear"
                        android:id="@+id/koala_bear"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lion"
                        android:id="@+id/lion"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/wolverine"
                        android:id="@+id/wolverine"/>
                </LinearLayout>
            </HorizontalScrollView>
    </RelativeLayout>

</layout>